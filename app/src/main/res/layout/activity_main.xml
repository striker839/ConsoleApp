<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txt01"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:hint="Texto 1"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txt02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt02"
        android:layout_width="343dp"
        android:layout_height="49dp"
        android:layout_marginBottom="75dp"
        android:ems="10"
        android:hint="Texto 2"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnProcessar"
        app:layout_constraintStart_toStartOf="@+id/txt01"
        app:layout_constraintTop_toBottomOf="@+id/txt01" />

    <Button
        android:id="@+id/btnProcessar"
        android:layout_width="346dp"
        android:layout_height="62dp"
        android:layout_marginBottom="15dp"
        android:text="Processar"
        app:layout_constraintBottom_toTopOf="@+id/txtConsole"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt02" />

    <TextView
        android:id="@+id/txtConsole"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="16dp"
        android:background="#040404"
        android:text="..."
        android:textColor="#F6F2F2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnProcessar" />

</androidx.constraintlayout.widget.ConstraintLayout>